# ----- Replacement commands -----
alias bat="bat --theme=TwoDark"
alias ls="lsd"

# ----- Lazy Aliases -----
alias lzd="lazydocker"
alias lzg='lazygit'
alias lzs='lazysql'

alias doc-rust="docker run --rm -ti fathyb/carbonyl https://doc.rust-lang.org/book"

# ----- Terminal Management Aliases -----
alias editbash="nvim \$HOME/.bashrc"
alias nvim='NVIM_APPNAME="nvim" nvim'
alias dnf-update="sudo dnf update -y && sudo dnf upgrade --refresh"
alias dnf-install="sudo dnf install"
alias dnf-remove="sudo dnf remove"
alias cargo-update="cargo install-update -a"

# ----- CD Paths Aliases -----
alias cd-env="cd \$DOTFILES/env-files/.config/env-files"
alias cd-script="cd \$ROOT_SCRIPTS"
alias cd-cs="cd \$DIR_CS"
alias cd-algo="cd \$DIR_CS/ALGORITHMS"
alias cd-rust="cd \$DIR_RUST"
alias cd-rustlings="cd \$DIR_RUST/rustlings/exercises"
alias cd-capsule="cd \$HOME/Developer/capsule/"

# ----- Script Aliases -----
alias clean_temp="cd \$DOTFILES/scripts/.config/scripts/py-scripts && py del_temp_folders.py"

# ----- Monitor size Aliases -----
alias hfocus='hyprctl keyword monitor "HDMI-A-1,2560x1440@60,0x0,1.0"'
alias hdistract='hyprctl keyword monitor "HDMI-A-1,3440x1440@85,0x0,1.0"'
alias kfocus="kscreen-doctor output.HDMI-A-1.mode.2560x1440@60"
alias kdistract="kscreen-doctor output.HDMI-A-1.mode.3440x1440@85"


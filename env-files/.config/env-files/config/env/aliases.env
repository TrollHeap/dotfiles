# ----- Projects Aliases -----
alias obsidian="cd \$HOME/Developer/obsidian-software && nvim"
alias dev-nvim="cd \$ROOT_NVIM && nvim ."
alias plantuml="java -jar \$HOME/Developer/tools/plantuml/plantuml.jar"

# ----- Python Aliases -----
alias py3='python3'
alias pip3='pip3'

# ----- Tmuxifier Aliases -----
alias tx-init='tmuxifier load-session config-init'
alias tx-ide='tmuxifier load-session config-ide'
alias tx-env='tmuxifier load-session config-env'
alias tx-software='tmuxifier load-session dev-software'
alias tx-management='tmuxifier load-session dev-management'
alias tx-rust='tmuxifier load-session dev-rust'
alias tx-py='tmuxifier load-session dev-python'
alias tx-capbox='tmuxifier load-session capsule-tool'
alias tx-capphp='tmuxifier load-session capsule-php'

# ----- Taskflow cli Aliases -----
alias taskflowcli="cd \$HOME/Developer/taskflow-cli && make taskflow"
alias taskflowboard="cd \$HOME/Developer/taskflow-cli && make taskboard"
alias taskflowswitch="cd \$HOME/Developer/taskflow-cli && make taskswitch"
alias taskflowfocus="cd \$HOME/Developer/taskflow-cli && make taskfocus"

# ----- Docker cli Aliases -----
alias docker-run-alpine="docker run --rm -it alpine /bin/sh"

# SSH KEY PATH
alias ssh-debianserv="ssh -i ~/.ssh/id_ed25519_debian-serv bin-srv@192.168.1.96"
alias ssh-bandit="ssh bandit0@bandit.labs.overthewire.org -p 2220"

